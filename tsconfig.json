{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "paths": {
      "@constants": ["src/constants"],
      "@env": ["src/env"],
      "@env/*": ["src/env/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@game": ["src/game"],
      "@game/*": ["src/game/*"],
    }
  },
  "include": ["./src"]
}
